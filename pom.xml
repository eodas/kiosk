<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>app.parkingkiosk</groupId>
  <artifactId>ParkingKiosk</artifactId>
  <version>1.0.1-SNAPSHOT</version>

	<name>Raspberry Pi IoT Kiosk (Pi IoT Tron) - Kiosk - INTERNET OF THINGS (IoT) :: Internet of Things Drools-jBPM Expert System using Pi IoT Tron AI-IoTBPMServer</name>
	<description>Raspberry Pi IoT Kiosk (Pi IoT Tron) AI-IoTBPMServer :: AI-IoTBPMServer Application using the jBPM and Drools Rules Engine for Pi IoT Tron and AI-IoTBPMServer Executive Order Corp</description>

  <properties>
    <!-- DEPENDENCIES VERSIONS -->
    <slf4j.version>2.0.0-alpha0</slf4j.version>
    <pi4j.version>1.2</pi4j.version>
  </properties>
  
   <dependencies>
      <dependency>
      <groupId>com.pi4j</groupId>
      <artifactId>pi4j-device</artifactId>
      <version>${pi4j.version}</version>
    </dependency>
    <dependency>
      <groupId>com.pi4j</groupId>
      <artifactId>pi4j-core</artifactId>
      <version>${pi4j.version}</version>
    </dependency>
  </dependencies>
  
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>